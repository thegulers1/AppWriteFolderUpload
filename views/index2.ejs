<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Index 2</title>
  <style>
    body {
      padding: 8% 5%;
      background-color: #f0f0f0;
    }

    #videoList {
      display: flex;
      flex-wrap: wrap;
    }

    .videoWrapper {
      flex: 1 1 calc(33.333% - 10px);
      margin: 5px;
      position: relative;
      background-color: #fff;
      overflow: hidden;
      cursor: pointer;
    }

    .videoWrapper video {
      width: 100%;
      height: auto;
      display: block;
    }

    #popup {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8);
      display: none;
      justify-content: center;
      align-items: center;
    }

    #popup video {
      max-width: 80%;
      max-height: 80%;
    }

    #closeButton {
      position: fixed;
      top: 2%;
      right: 2%;
      color: white;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      font-size: 3.5em;
      /* Font boyutunu büyüt */
      font-weight: bold;
      /* Fontu kalın yap */
      background: rgba(0, 0, 0, -0.2)
    }

    #qrButton {
      position: fixed;
      /* pozisyonu sabitlemek için 'fixed' kullan */
      top: 50%;
      /* yukarıdan %50 uzaklıkta */
      left: 0;
      /* soldan 0 uzaklıkta, yani tam sol kenar */
      transform: translateY(-50%);
      /* Y ekseninde -%50 çevirme ile düğmeyi dikey olarak ortala */
      background-color: transparent;
      border: 6px solid #f2f2f2;
      color: #f2f2f2;
      padding: 30px 50px;
      cursor: pointer;
      font-weight: 500;
      font-size: 2rem;
      border-radius: 4px;
    }

    #qrPopup {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8);
      display: none;
      justify-content: center;
      align-items: center;
    }

    #qrContent {
      background-color: #fff;
      padding: 20px;
    }
  </style>
</head>

<body>

  <div id="videoList">
    <% videoList.forEach(function(video) { %>
      <div class="videoWrapper" onclick="openPopup('<%= video %>')">
        <video preload="metadata">
          <source src="/<%= video %>" type="video/mp4">
        </video>
      </div>
      <% }); %>
  </div>

  <div id="popup" onclick="closePopup()">
    <button id="closeButton" onclick="closePopup()">×</button> <!-- Çıkış yazısını çarpı simgesi (×) ile değiştir -->
    <video controls id="popupVideo"></video>
    <button id="qrButton" onclick="event.stopPropagation(); openQrPopup();">QR</button>
    <!-- Video pop-up'ında QR düğmesi -->
    <div id="qrPopup" onclick="closeQrPopup()">
      <div id="qrContent" onclick="event.stopPropagation();">
        <img id="qrImage" src="" alt="QR Code">
      </div>
    </div>

  </div>

  <!-- QR Button ve QR Pop-up -->

  <script src="/socket.io/socket.io.js"></script>
  <script>
    var socket = io();

    function openPopup(videoSrc) {
      var popup = document.getElementById('popup');
      var popupVideo = document.getElementById('popupVideo');
      popup.style.display = 'flex';
      popupVideo.src = '/' + videoSrc;
    }

    function closePopup() {
      var popup = document.getElementById('popup');
      var popupVideo = document.getElementById('popupVideo');
      popup.style.display = 'none';
      popupVideo.src = '';
    }
    socket.on('new_video', function (filename) {
      // Yeni video eklendiğinde DOM'u güncelle
      var videoList = document.getElementById('videoList');
      var newVideoWrapper = document.createElement('div');
      newVideoWrapper.className = 'videoWrapper';
      newVideoWrapper.onclick = function () { openPopup(filename); };

      var newVideo = document.createElement('video');
      newVideo.preload = 'metadata';

      var newSource = document.createElement('source');
      newSource.src = '/' + filename;
      newSource.type = 'video/mp4';

      newVideo.appendChild(newSource);
      newVideoWrapper.appendChild(newVideo);
      videoList.appendChild(newVideoWrapper);
    });

    async function openQrPopup() {
      const qrPopup = document.getElementById('qrPopup');
      const qrImage = document.getElementById('qrImage');
      const videoSrc = document.getElementById('popupVideo').src;
      const videoFilename = videoSrc.substring(videoSrc.lastIndexOf('/') + 1);
      try {
        const response = await fetch(`/qr/${videoFilename}`);
        const data = await response.json();
        qrImage.src = data.qrSvg;
        qrPopup.style.display = 'flex';
      } catch (error) {
        console.error('Error fetching QR code:', error);
      }
    }

    function closeQrPopup() {
      const qrPopup = document.getElementById('qrPopup');
      qrPopup.style.display = 'none';
    }
  </script>
</body>

</html>